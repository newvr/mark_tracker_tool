<arg name="initial_pose_y" default="17.0" />

  <node pkg="mark_tracker_tools" type="init_mark0.sh"
    args="4 $(env HOME)/catkin_ws/src/norme"
    name="timed_roslaunch" output="screen">
  </node>

-->



</launch>


